<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Marble" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Marble">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-[#232529] text-white">
    <nav class="bg-[#1a1b1e] border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-80 transition" do %>
          <span class="text-3xl font-bold text-[#b57cf0]">Marble</span>
        <% end %>

        <%= link_to new_note_path, class: "bg-[#b57cf0] hover:bg-[#a66ad9] text-white px-6 py-2 rounded-lg transition font-medium" do %>
          + New Note
        <% end %>
      </div>
    </nav>

    <% if notice.present? %>
      <div class="max-w-7xl mx-auto px-4 mt-4">
        <div class="bg-green-900/50 border border-green-700 text-green-300 px-4 py-3 rounded-lg">
          <%= notice %>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="max-w-7xl mx-auto px-4 mt-4">
        <div class="bg-red-900/50 border border-red-700 text-red-300 px-4 py-3 rounded-lg">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>